<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Ibrows\BoxalinoBundle\Helper\HttpP13nService" id="ibrows_boxalino.client.http_p13n_service">
            <argument>%ibrows_boxalino.host%</argument>
            <argument>%ibrows_boxalino.account%</argument>
            <argument>%ibrows_boxalino.username%</argument>
            <argument>%ibrows_boxalino.password%</argument>
            <argument>%ibrows_boxalino.cookie_domain%</argument>
        </service>
        <service class="Ibrows\BoxalinoBundle\Exporter\Exporter" id="ibrows_boxalino.exporter.exporter">
            <argument id="doctrine.orm.entity_manager" type="service"/>
            <argument>%ibrows_boxalino.entities%</argument>
            <argument>%ibrows_boxalino.export_server%</argument>
            <argument>%ibrows_boxalino.export_directory%</argument>
            <argument>%ibrows_boxalino.account%</argument>
            <argument>%ibrows_boxalino.username%</argument>
            <argument>%ibrows_boxalino.password%</argument>
            <argument>%ibrows_boxalino.properties_xml%</argument>
            <argument>%ibrows_boxalino.debug_mode%</argument>
        </service>
        <service class="Ibrows\BoxalinoBundle\Twig\TwigExtension" id="ibrows_boxalino.twig.twig_extension">
            <call method="setAcccount">
                <argument>%ibrows_boxalino.account%</argument>
            </call>
            <call method="setRequest">
                <argument type="service" id="request_stack"/>
            </call>
            <tag name="twig.extension"/>
        </service>

    </services>
</container>
