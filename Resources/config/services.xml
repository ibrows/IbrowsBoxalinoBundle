<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Ibrows\BoxalinoBundle\Helper\HttpP13nHelper" id="ibrows_boxalino.client.http_p13n_helper">
            <argument type="service" id="request_stack" />
            <argument>%ibrows_boxalino.access.account%</argument>
            <argument>%ibrows_boxalino.access.username%</argument>
            <argument>%ibrows_boxalino.access.password%</argument>
        </service>

        <service class="Ibrows\BoxalinoBundle\Exporter\Exporter" id="ibrows_boxalino.exporter.exporter">
            <argument id="ibrows_boxalino.client.http_p13n_helper" type="service"/>
            <argument>%ibrows_boxalino.entities%</argument>
            <argument>%ibrows_boxalino.export.directory%</argument>
            <argument>%ibrows_boxalino.export.properties_xml%</argument>
            <argument>%ibrows_boxalino.debug_mode%</argument>
        </service>

        <service class="Ibrows\BoxalinoBundle\Twig\TwigExtension" id="ibrows_boxalino.twig.twig_extension">
            <call method="setAccount">
                <argument>%ibrows_boxalino.access.account%</argument>
            </call>
            <call method="setRequest">
                <argument type="service" id="request_stack"/>
            </call>
            <tag name="twig.extension"/>
        </service>

        <service class="Ibrows\BoxalinoBundle\EventListener\ResponseEventListener" id="ibrows_boxalino.event_listener.response_event_listener">
            <call method="setHttpP13nHelper">
                <argument id="ibrows_boxalino.client.http_p13n_helper" type="service"/>
            </call>
            <tag name="kernel.event_listener" event="kernel.response" />
        </service>
    </services>
</container>